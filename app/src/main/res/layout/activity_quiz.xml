<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quizView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#410B13"
    android:orientation="vertical"
    tools:context=".QuizActivity">

    <TextView
        android:id="@+id/QuizTxt"
        android:layout_width="350dp"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:text="1. World War ll ended in 1945"
        android:textColor="#F8F3F3"
        android:textSize="35dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTrue"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="#FFD700"
        android:text="TRUE"
        android:textColor="#410B13"
        android:textSize="25dp"
        android:layout_marginBottom="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFalse"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="#FFD700"
        android:text="false"
        android:textColor="#410B13"
        android:textSize="25dp"
        android:layout_marginBottom="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="80dp"
        android:background="#652A0E"
        android:text="next"
        android:textColor="#FFD700"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/txtTip"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text="Tip: Click true or false then click next"
        android:textColor="#FFD700" />



</androidx.appcompat.widget.LinearLayoutCompat>